<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
        <property name="hibernate.connection.username">amin</property>
        <property name="hibernate.connection.password">amin123456</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>


        <mapping class="model.entity.RealPerson"/>
        <mapping class="model.entity.GrantCondition"/>
        <mapping class="model.entity.FacilityAccount"/>
        <mapping class="model.entity.FacilityProfile"/>

    </session-factory>
</hibernate-configuration>